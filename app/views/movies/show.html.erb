<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Image</dt>
      <dd>
        <img src="<%= @movie.image_url %>">
      </dd>

      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Director</dt>
      <dd>
        <a href="/directors/<%= @movie.director_id %>">
          <!-- 2 different ways to write the same code. helper method (not commented out) is faster -->
          <!-- <%= Director.find_by(:id => @movie.director_id).name %> -->
          <%= @movie.director.name %>
        </a>
      </dd>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<table class="table table-striped table-hover">
  <tr>
    <th>Actor</th>
    <th>Character</th>
  </tr>
  <tr>
    <td> TOTAL NUMBER OF CHARACTERS </td>
    <td> <%= @movie.characters.count %> </td>
  </tr>

  <% @movie.characters.each do |character| %>
  <tr>
    <td> <%= character.actor.name %>
    </td>
    <td><%= character.name %></td>
    <% end %>
  </tr>
</table>

<div class="page-header">
  <h3>Add Character</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_character" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- hidden input for movie_id -->
      <input type="hidden" name="movie_id" value="<%= @movie.id %>">


      <label for="actor_id" class="control-label">
        Actor
      </label>

      <%= select_tag(:actor_id, options_from_collection_for_select(Actor.all, :id, :name, @character.actor_id), :class => "form-control") %>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character.name %>">
      </div>

      <button class="btn btn-success">
        Create Character
      </button>
      or
      <a href="/movies/<%= @movie.id %>">Cancel</a>
    </form>
  </div>
</div>
